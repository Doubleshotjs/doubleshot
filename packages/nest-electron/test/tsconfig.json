{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./mock/types"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.html",
    "mock/types"
  ]
}
