    "eslint": "^8.17.0",
    "execa": "^6.1.0",
    "fs-extra": "^10.1.0",
    "lint-staged": "^13.0.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.0",
    "tsup": "^6.1.2",
    "typescript": "^4.7.3",
    "vitest": "^0.15.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --fix"
    ]
