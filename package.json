{
  "name": "doubleshot-monorepo",
  "private": true,
  "packageManager": "pnpm@7.0.1",
  "description": "A solution to save effort",
  "author": "ArcherGu (https://github.com/ArcherGu/)",
  "keywords": [
    "electron",
    "vite",
    "nestjs"
  ],
  "scripts": {
